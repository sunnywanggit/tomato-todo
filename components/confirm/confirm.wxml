<view class="container" wx:if="{{visible}}">
  <view class="confirm">
    <textarea
            placeholder="{{placeholder}}"
            value="{{value}}"
            bindinput="changeValue"
            autofocus="true"
            focus="true"
    ></textarea>
    <view class="actions">
    <view hover-class="active" class="sure" bindtap="confirm" >确定</view>
    <view hover-class="active" bindtap="cancel" >取消</view>
  </view>
  </view>
</view>