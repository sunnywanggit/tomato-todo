<view class="wrapper">
    <view class="title" >绑定PC账号</view>
    <view class="input-wrapper">
        <input class="account" bindinput="inputAccount" placeholder="账号"
        value="{{accountValue}}"
        />
        <input password="true" class="password" bindinput="passwordInput" placeholder="密码"
               value="{{passwordValue}}"
        />
    </view>
    <g-button text="绑定" size="mini" bindtap="onRegister"></g-button>
    <text  >还没有绑定PC账号？点击绑定吧，兄弟！</text>
    <image src="../../imgs/tomato.png" alt=""></image>
</view>



