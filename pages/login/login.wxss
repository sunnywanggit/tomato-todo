.login{
    display: flex;
    justify-content: center;
    align-items: center;
    flex-direction: column;
}

.login .avatar{
    width: 200rpx;
    height: 200rpx;
    border-radius: 50%;
    overflow: hidden;
    margin-top: 200rpx;
    border: 1px solid red;
    border: 12rpx solid #F6705A;
}
.login .details{
    display: flex;
    justify-content: center;
    color:#F6705A ;
    font-size: 22rpx;
    position: relative;
    margin-top: 35rpx;
}
.login .details::after{
    position: absolute;
    content: '';
    bottom: -20rpx;
    width: 100%;
    height: 4rpx;
    background: #F6705A;
}

.login .loginButton::after{
    border: none;
}
.login .loginButton .button-hover{
    opacity: 0.6;
}
.login .loginButton{
    width:340rpx;
    height: 80rpx;
    border-radius: 16rpx;
    color: #fff;
    font-size: 26rpx;
    display: flex;
    justify-content: center;
    align-items: center;
    margin-top: 80rpx;
    background: linear-gradient(to right,#EF9B75,#F6705A);
}
.login .text{
    color: #F6705A;
    font-size: 22rpx;
    margin-top: 30rpx;
}
