.my-container {
    background: #F6F6F6;
    display: flex;
    flex-direction: column;
}
.title {
    height: 130rpx;
    background:#fff;
    display: flex;
    align-items: center;
    color: #FE996F;
    font-size: 22rpx;
    margin-bottom: 10rpx;
}
.title .avatar {
    width: 88rpx;
    height: 88rpx;
    border-radius: 50%;
    overflow: hidden;
    margin-right: 20rpx;
}
.title .details {
    display: flex;
    flex-direction: column;
    justify-content: center;
    flex: 1;
}

.title .details .name {
    color: black;
    font-size: 32rpx;
    padding-bottom: 22rpx;
}

.tabs {
    background:#fff;
    display: flex;
    justify-content:center;
    align-items: center;
    font-size: 28rpx;
    color: #333;
    padding: 16rpx 0;
    margin-bottom: 10rpx;
}
.tabs > view {
    position: relative;
    height: 100%;
}
.tabs > view.hover-active {
    opacity: 0.5;
}

.my-container .lists {
    flex: 1;
    padding: 0 24rpx;
    box-sizing:  border-box;
    overflow: scroll;
    background:#fff;
}

.my-container .lists .item {
    background: #fff;
    font-size: 32rpx;
    color: #333;
    border-radius: 8rpx;
    padding: 16rpx 28rpx 35rpx 40rpx;
    box-shadow: 0rpx 2rpx 6rpx 0rpx rgba(0,0,0,0.10);
    margin-bottom: 32rpx;
}

.my-container .lists .item .time {
    font-size: 38rpx;
    font-weight: bold;
    margin-bottom: 24rpx;
    color: #F6705A;
}
.my-container .lists .item .content {
    display: flex;
    padding-bottom: 24rpx;
}
.my-container .lists .item .content text {
    padding-right: 25rpx;
}
.my-container .lists .item .content detail {
    flex: 1;
    flex-wrap: wrap;
}
.qr::after { border: none; }
.qr { background: transparent; color: #FE996F; font-size: 24rpx;
    margin: 20rpx 0;

    }

