<view class="home-container">
    <scroll-view class="todoList" scroll-y="true">
        <view class="item" wx:for="{{lists}}" data-index="{{index}}" wx:key="{{item.id}}" bindtap="finishTask" >
            <view class="select {{item.completed && 'active'}} "></view>
            <text>{{item.description}}</text>
        </view>
    </scroll-view>
    <g-button text="创建任务" type="change" class="createButton" bindtap="createTask"></g-button>
    <view class="tomato-wrapper">
        <view class="tomato">
            <g-clock text="点击开始闹钟" bindtap="startTiming"></g-clock>
        </view>
    </view>
    <g-confirm visible="{{visible}}" placeholder="我完成了什么" bindconfirm="confirm" bindcancel="cancel"></g-confirm>
</view>